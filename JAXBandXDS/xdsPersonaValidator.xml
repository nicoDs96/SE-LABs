<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:simpleType name="restrictionOnName">
        <xs:restriction base="xs:string">
            <xs:pattern value="[a-zA-Z]+"/>
        </xs:restriction>
</xs:simpleType>

<xs:element name="Persona">
  <xs:complexType>
    <xs:sequence>
      <xs:element name="PersonSurname" type="xs:string"/>
	  <xs:element name="PersonName" type="restrictionOnName"/>
      <xs:element name="PersonBDay" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

</xs:schema>